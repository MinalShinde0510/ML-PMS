@model CloudTrixApp.Models.Invoice
@{
    ViewBag.Title = "Invoice";
    Layout = null;
}
<style>
    #header {
        height: 30px;
        width: 100%;
        margin: 20px 0;
        background: #222;
        text-align: center;
        color: #fff;
        font: 700 15px Helvetica,Sans-Serif;
        letter-spacing: 1px;
        padding: 8px 0;
    }

    #page-wrap {
        width: 800px;
        margin: 0 auto;
    }

    textarea {
        border: 0;
        font: 14px Georgia,Serif;
        overflow: hidden;
        resize: none;
    }

        textarea:hover, textarea:focus, #items td.total-value textarea:hover, #items td.total-value textarea:focus, .delete:hover {
            background-color: #ef8;
        }

    #address {
        width: 250px;
        height: 150px;
        float: left;
        font-family: georgia,garamond,serif;
        font-size: 16px;
        font-style: italic;
    }

    #logo {
        text-align: right;
        float: right;
        position: relative;
        margin-top: 25px;
        border: 1px solid #fff;
        max-width: 540px;
        max-height: 100px;
        overflow: hidden;
        font-family: font-family:verdana;
        font-size: 25px;
        font-style: normal;
    }

    #customer {
        overflow: hidden;
    }

    #customer-title {
        font-size: 20px;
        font-weight: 700;
        float: left;
    }

    #meta {
        margin-top: 1px;
        width: 300px;
        float: right;
    }

        #meta td.meta-head {
            text-align: left;
            background: #eee;
            font-size: 15px;
        }

    table {
        display: table;
        border-collapse: collapse;
        box-sizing: border-box;
        border-spacing: 2px;
        border-color: grey;
    }
    /*table td, table th {
            border: 1px solid #000;
            padding: 5px;
        }*/

    #items {
        clear: both;
        width: 100%;
        margin: 30px 0 0;
        border: 1px solid #000;
    }

        #items tr.item-row td {
            border: 0;
            vertical-align: top;
        }

        #items td.item-name {
            width: 175px;
        }

        #items td.description {
            width: 300px;
        }

    tbody {
        display: table-row-group;
        vertical-align: middle;
        border-color: inherit;
    }

    tr {
        display: table-row;
        vertical-align: inherit;
        border-color: inherit;
    }

    #items th {
        background: #eee;
    }

    table td, table th {
        border: 1px solid #000;
        padding: 5px;
    }

    body {
        font: 18px/1.4 Georgia,serif;
    }
</style>
<div>
    <textarea id="header">INVOICE</textarea>
    @using (Html.BeginForm())
    {
        <div id="identity">
            <textarea id="address">
                @Model.Company.CompanyName
                @Model.Company.Address1
                @Model.Company.EMail
                Mob. No. :@Model.Company.ContactNo
            </textarea>
            <div id="logo">
                @Model.Company.CompanyName
            </div>
        </div>
        <div id="customer">
            <textarea id="address"></textarea>
        </div>

        <div id="customer">
            <textarea id="customer-title">
                @Model.ClientName
                @Model.ClientEMail
            </textarea>
            <table id="meta">
                <tbody>
                    <tr>
                        <td class="meta-head">
                            Invoice No.
                        </td>
                        <td>@Model.InvoiceNo</td>
                    </tr>
                    <tr>
                        <td class="meta-head">Date</td>
                        <td>@Model.InvoiceDate.ToString("dd MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <td class="meta-head">Amount Due</td>
                        <td>@Model.GrandTotal</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <table id="items">
            <tbody>
                <tr>
                    <th>Description</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Tax(%)</th>
                    <th>Amount</th>
                    <th>IGST(%)</th>
                    <th>IGST Amt</th>
                    <th>CGST(%)</th>
                    <th>CGST Amt</th>
                    <th>SGST(%)</th>
                    <th>SGST Amt</th>
                    <th>Total Amt</th>
                </tr>
                @foreach (var Items in ViewBag.InvoiceItem)
                {
                    <tr class="item-row">
                        <td class="item-name">@Items.Description</td>
                        <td class="description">@Items.Quantity</td>
                        <td class="item-name">@Items.Rate</td>
                        <td class="item-name">@Items.Tax</td>
                        <td class="item-name">@Items.Amount</td>
                        <td class="item-name">@string.Format("{0:N0}", Items.IGSTRate)%</td>
                        <td class="item-name">@Items.IGST_Amt</td>
                        <td class="item-name">@string.Format("{0:N0}", Items.CGSTRate)%</td>
                        <td class="item-name">@Items.CGST_Amt</td>
                        <td class="item-name">@string.Format("{0:N0}", Items.SGSTRate)%</td>
                        <td class="item-name">@Items.SGST_Amt</td>
                        <td class="item-name">@Items.Total_Amt </td>
                    </tr>
                }
                <tr id="hiderow">
                    <td colspan="12"></td>
                </tr>
                <tr>
                    <td colspan="8" class="blank"> </td>
                    <td colspan="2" class="total-line">Total</td>
                    <td colspan="2" class="total-value"><div id="subtotal">@Model.GrandTotal</div></td>
                </tr>
                <tr>
                    <td colspan="8" class="blank"> </td>
                    <td colspan="2" class="total-line">Discount</td>
                    <td colspan="2" class="total-value"><div id="total">@Model.AdditionalDiscount</div></td>
                </tr>
                <tr>
                    <td colspan="8" class="blank"> </td>
                    <td colspan="2" class="total-line">Amount Paid</td>
                    <td colspan="2" class="total-value"><textarea id="paid">@Model.GrandTotal</textarea></td>
                </tr>
               
            </tbody>
        </table>
    }
</div>




